<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/category_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvNamaMobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Mobil"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Kirim (Kota, Provinsi)"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvEstimasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimasi Sampai: 5-7 Hari"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvTanggalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Order: 2025-06-19"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: Rp 123.000.000"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvOngkir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongkir: Rp 20.000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTotalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar: Rp 123.020.000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Menunggu"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="4dp" />

    <!-- Upload Bukti Bayar jika kosong -->
    <LinearLayout
        android:id="@+id/layoutUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Gambar" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgBuktiBayar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:visibility="gone" />
</LinearLayout>
