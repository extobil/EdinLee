<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Informasi Kontak"
                android:textSize="23sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <!-- Gambar Toko -->
        <ImageView
            android:id="@+id/imageToko"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_4"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- Tentang Kami -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Kami"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Nasmoco adalah showroom dan pusat layanan mobil terpercaya yang menyediakan berbagai jenis mobil baru dan bekas berkualitas. Kami berlokasi di Semarang dan berkomitmen memberikan pelayanan terbaik, mulai dari konsultasi pembelian, test drive, hingga layanan purna jual. Kepuasan pelanggan adalah prioritas utama kami."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Kontak Instagram -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="left|center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/instagram"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.nasmoco.com"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- Kontak WhatsApp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="left|center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wa"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+6282243749774"
                android:textColor="#2196F3"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
